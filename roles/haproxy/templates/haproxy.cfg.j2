global
    daemon
defaults
    mode tcp
    maxconn 10000
    timeout connect 2s
    timeout client 10s
    timeout server 10s

listen stats :8888
    mode http
    stats uri /
    stats enable

frontend vip-db
    bind {{ lb_db_vip }}:3306
    timeout client 90s
    default_backend db-galera

backend db-galera
    option httpchk
    stick-table type ip size 2
    stick on dst
    timeout server 90s
{% for node in groups['controller'] %}
    server {{ hostvars[node]['ansible_hostname'] }} {{ hostvars[node]['ansible_' + private_if ]['ipv4']['address'] }}:3306 check inter 1s port 9200
{% endfor %}



frontend vip-msg
    bind {{ rabbit_host }}:{{ rabbit_port | default(5672) }}
    timeout client 900m
    default_backend msg

backend msg
    balance roundrobin
    timeout server 900m
{% for node in groups['controller'] %}
    server {{ hostvars[node]['ansible_hostname'] }} {{ hostvars[node]['ansible_' + private_if ]['ipv4']['address']  }}:{{ rabbit_port | default(5672) }} check inter 1s
{% endfor %}

frontend vip-keystone-admin
